  <nav class='top-bar' data-topbar>
    <ul class='title-area'>
      <li class='name'><h1><%= link_to 'â˜†pluck' %></h1></li>
    </ul>
    <section class='top-bar-section'>
      <ul class='right'>
        <li class='has-form'>
          <%= form_tag '/favorites', method: :get do %>
            <div class='row collapse'>
